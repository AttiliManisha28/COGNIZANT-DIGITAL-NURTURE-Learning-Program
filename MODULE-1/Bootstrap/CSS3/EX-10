  }

  
  @media (max-width: 767px) {
    body {
      font-size: 4vw; /* bigger base font size on small screens */
      padding: 10px;
    }

    nav {
      flex-direction: column;
      align-items: center;
      gap: 1rem;
    }

    nav a {
      padding: 1rem 2rem;
